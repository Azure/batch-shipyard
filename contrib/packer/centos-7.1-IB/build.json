{
  "variables": {
    "image_name": "",
    "resource_group": "",
    "location": "",
    "subscription_id": "",
    "directory_id": "",
    "application_id": "",
    "auth_key": "",
    "docker_version": "17.12.1.ce-1.el7.centos",
    "bootstrap": "bootstrap.sh"
  },
  "builders": [
      {
          "type": "azure-arm",

          "subscription_id": "{{user `subscription_id`}}",
          "tenant_id": "{{user `directory_id`}}",
          "client_id": "{{user `application_id`}}",
          "client_secret": "{{user `auth_key`}}",

          "managed_image_name": "{{user `image_name`}}",
          "managed_image_resource_group_name": "{{user `resource_group`}}",

          "os_type": "Linux",
          "image_publisher": "OpenLogic",
          "image_offer": "CentOS-HPC",
          "image_sku": "7.1",

          "ssh_pty": "true",

          "location": "{{user `location`}}",
          "vm_size": "STANDARD_A8"
      }
  ],
  "provisioners": [
      {
          "type": "file",
          "source": "{{user `bootstrap`}}",
          "destination": "/tmp/{{user `bootstrap`}}"
      },
      {
          "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
          "inline": [
              "chmod +x /tmp/{{user `bootstrap`}}",
              "/tmp/{{user `bootstrap`}} {{user `docker_version`}}",
              "/usr/sbin/waagent -force -deprovision+user && export HISTSIZE=0 && sync"
          ],
          "inline_shebang": "/bin/bash -e",
          "type": "shell",
          "skip_clean": true
      }
  ]
}
